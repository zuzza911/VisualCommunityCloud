{
  "build": "./build/client/app",
  "work": "./workspace",
  "sass": {
    "src": "./workspace/client/app/styles/*.scss",
    "dest": "./build/client/app/styles"
  },
  "copy": {
    "src": [
      "./workspace/client/app/images/*",
      "./workspace/client/app/fonts/*"
    ],
    "dest": [
      "./build/images",
      "./build/fonts"
    ]
  },
  "server": {
    "host": "localhost",
    "port": 4000,
    "livereload": true
  },
  "html": {
    "src": "./workspace/client/app/scripts/**/*.html",
    "dest": "./build/scripts/app/templates"
  },
  "html_test": {
    "src": "./workspace/client/app/modules/**/*.html",
    "dest": "./build/"
  },
  "script": {
    "src": [
      "./workspace/client/app/scripts/**/*.js",
      "./workspace/client/vendors/**/*.js"
    ],
    "dest": "./build/"
  }
}